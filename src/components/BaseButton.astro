---
import { Image } from 'astro:assets'
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'button'> & {
  iconRight?: string
  iconLeft?: string
}

const { class: classes, iconRight, iconLeft, ...rest } = Astro.props as Props
---

<button
  type="button"
  aria-label="Button"
  class:list={[
    'h-full py-4 uppercase px-6 border flex items-center justify-center flex-nowrap font-medium space-x-4 rounded-full',
    classes,
  ]}
  {...rest}
>
  {
    iconLeft && (
      <Image
        src={`/${iconLeft}.svg`}
        alt="Button icon left"
        width="18"
        height="18"
      />
    )
  }
  <span>
    <slot />
  </span>
  {
    iconRight && (
      <Image
        src={`/${iconRight}.svg`}
        alt="Button icon right"
        width="18"
        height="18"
      />
    )
  }
</button>
