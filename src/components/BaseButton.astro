---
import type { HTMLAttributes } from 'astro/types'
import { Image } from 'astro:assets'

type Props = HTMLAttributes<'button'> & {
  iconRight?: string
  iconLeft?: string
}

const { class: classes, iconRight, iconLeft, ...rest } = Astro.props
---

<button
  type="button"
  class:list={['', classes]}
  class="h-full py-4 px-6 border font-medium space-x-4 rounded-full"
  {...rest}
>
  {
    iconLeft ? (
      <Image
        src={iconLeft}
        alt="icon-left"
        width="20"
        height="20"
      />
    ) : (
      ''
    )
  }
  <slot />
  {
    iconRight ? (
      <Image
        src={iconRight}
        alt="icon-right"
        width="20"
        height="20"
      />
    ) : (
      ''
    )
  }
</button>
