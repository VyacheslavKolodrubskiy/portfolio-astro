---
import { Image } from 'astro:assets'

interface link {
  name: string
  href: string
}

const links: link[] = [
  {
    name: 'About',
    href: '/about',
  },
  {
    name: 'Project',
    href: '/projects',
  },
  {
    name: 'Contacts',
    href: '/contacts',
  },
]
---

<header class="py-4">
  <div class="container flex items-center justify-between">
    <a href="/">
      <Image
        src="/logo.svg"
        width="24"
        height="24"
        alt="logo"
      />
    </a>
    <nav>
      <ul class="items-center flex text-[clamp(1.5rem,3vw,2rem)] space-x-10">
        {
          links.map((link) => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
